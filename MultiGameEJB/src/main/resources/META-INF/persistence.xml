<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="MultiGame">
        <jta-data-source>jdbc/__default</jta-data-source>
		<class>mx.ecosur.multigame.ejb.entity.Game</class>
        <class>mx.ecosur.multigame.ejb.entity.Player</class>
        <class>mx.ecosur.multigame.ejb.entity.ChatMessage</class>
		<properties>
			<property name="toplink.ddl-generation" 
				value="drop-and-create-tables"/> 
            <property name="toplink.jdbc.SynchronizeMappings"
                value="buildSchema"/>
        </properties>
	</persistence-unit>
</persistence>