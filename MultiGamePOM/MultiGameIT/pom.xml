<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>mx.ecosur</groupId>
	<artifactId>multi-game-it</artifactId>
	<description>Integration Tests for MultiGame</description>
	<parent>
        <artifactId>multi-game</artifactId>
        <groupId>mx.ecosur</groupId>
        <version>1.1-SNAPSHOT</version>
    </parent>
	<build>
		<plugins>
			<plugin>
	            <groupId>org.apache.maven.plugins</groupId>
	            <artifactId>maven-surefire-plugin</artifactId>
	            <version>2.4.2</version>
	            <executions>
	                <execution>
	                    <id>integration</id>
	                    <goals><goal>test</goal></goals>
	                    <phase>integration-test</phase>
	                </execution>
	            </executions>
	            <configuration>
		          <excludes>
		            <exclude></exclude>
		          </excludes>
		        </configuration>
	        </plugin>
			<plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-wsdl2code-maven-plugin</artifactId>         
                <version>1.5</version>
				<executions>
					<execution>
					   <id>registrar</id>
						<goals>
							<goal>wsdl2code</goal>
						</goals>
						<configuration>
							<packageName>mx.ecosur.multigame.webservice.registrar</packageName>
							<wsdlFile>src/main/axis2/Registrar.xml</wsdlFile>
							<databindingName>xmlbeans</databindingName>
							<generateTestcase>true</generateTestcase>
						</configuration>
                    </execution>
                    <execution>
                        <id>sharedboard</id>
                        <goals>
                            <goal>wsdl2code</goal>
                        </goals>
                        <configuration>
                            <packageName>mx.ecosur.multigame.webservice.sharedboard</packageName>
                            <wsdlFile>src/main/axis2/SharedBoard.xml</wsdlFile>    
                            <databindingName>xmlbeans</databindingName>
                            <generateTestcase>true</generateTestcase>
                        </configuration>
                    </execution>                               
				</executions>
				</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>target/generated-sources/axis2/wsdl2code/test</directory>
				<targetPath>src/test/webservices</targetPath>	
			</resource>
		</resources>		
	</build>	
	<dependencies>
	   <dependency>
            <groupId>javax.ejb</groupId>
            <artifactId>ejb</artifactId>
            <version>3.0</version>
            <scope>system</scope>
            <systemPath>${glassfish}/lib/javaee.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>javax.ejb</groupId>
            <artifactId>ejb-rt</artifactId>
            <version>3.0</version>
            <scope>system</scope>
            <systemPath>${glassfish}/lib/appserv-rt.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>javax.ejb</groupId>
            <artifactId>toplink</artifactId>
            <version>3.0</version>
            <scope>system</scope>
            <systemPath>${glassfish}/lib/toplink-essentials.jar</systemPath>
        </dependency>
	    <dependency>
            <groupId>mx.ecosur</groupId>
            <artifactId>ecosur-games</artifactId>
            <version>${version}</version>
        </dependency>
		<dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.0</version>
        </dependency>
	        <!--  Axis 2 -->
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2</artifactId>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-java2wsdl</artifactId>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-xmlbeans</artifactId>
            <version>1.5</version>
        </dependency>
	</dependencies>
</project>
