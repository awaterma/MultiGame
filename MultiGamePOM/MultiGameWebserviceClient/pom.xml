<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>mx.ecosur</groupId>
	<artifactId>multi-game-webservice-client</artifactId>
	<name>MultiGame Webservice Client</name>
	<description>XMLBean based client for MultiGame WebService</description>
	<parent>
        <artifactId>multi-game</artifactId>
        <groupId>mx.ecosur</groupId>
        <version>1.1-SNAPSHOT</version>
    </parent>
	<build>
		<plugins>
	        <plugin>
                <groupId>org.apache.axis2</groupId>
                <artifactId>axis2-wsdl2code-maven-plugin</artifactId>         
                <version>1.5</version>
				<executions>
					<execution>
					   <id>registrar</id>
						<goals>
							<goal>wsdl2code</goal>
						</goals>
						<configuration>
							<packageName>mx.ecosur.multigame.webservice.registrar</packageName>
							<wsdlFile>${basedir}/src/main/axis2/Registrar.xml</wsdlFile>
							<databindingName>adb</databindingName>
							<generateTestcase>true</generateTestcase>
						</configuration>
                    </execution>
                    <execution>
                        <id>sharedboard</id>
                        <goals>
                            <goal>wsdl2code</goal>
                        </goals>
                        <configuration>
                            <packageName>mx.ecosur.multigame.webservice.sharedboard</packageName>
                            <wsdlFile>${basedir}/src/main/axis2/SharedBoard.xml</wsdlFile>    
                            <databindingName>adb</databindingName>
                            <generateTestcase>true</generateTestcase>
                        </configuration>
                    </execution>                               
				</executions>
				</plugin>
		</plugins>
		<resources>
			<resource>
				<directory>target/generated-sources/axis2/wsdl2code/test</directory>
				<targetPath>src/test/webservices</targetPath>	
			</resource>
		</resources>		
	</build>	
	<dependencies>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2</artifactId>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-java2wsdl</artifactId>
            <version>1.5</version>
        </dependency>
        <dependency>
            <groupId>org.apache.axis2</groupId>
            <artifactId>axis2-xmlbeans</artifactId>
            <version>1.5</version>
        </dependency>
	</dependencies>
</project>
