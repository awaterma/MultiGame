<?xml version="1.0" encoding="utf-8"?>
<mx:Application xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:pente="mx.ecosur.multigame.pente.*"
	xmlns:multigame="mx.ecosur.multigame.*"
	layout="absolute" 
	backgroundGradientColors="[#222222, #333333]" backgroundColor="#333333">
	
	<mx:Style>
		CheckersBoard {
			cellBgColor1: #444444;
        	cellBgColor2: #ffffff;
        	cellBgAlpha: 50;
        	cellBorderColor: #333333;
        	cellBorderThickness: 1;
        	cellPadding: 10;
		}
		
		.windowStyles{
			color: #ffffff;
		}
		
		.panel{
			paddingTop: 10;
			paddingBottom: 10;
			paddingLeft: 10;
			paddingRight: 10;
			borderThicknessBottom: 5;
			borderThicknessTop: 5;
			borderThicknessLeft: 5;
			borderThicknessRight: 5;
			backgroundColor: #cccccc;
		}
		
		.fieldLit{
			color: #000000;
			font-weight: bold;
		}
		
		.field{
			color: #000000;
		}
	</mx:Style>
	
	<mx:Script> 
        <![CDATA[
        
         	import mx.controls.Alert;
        	
        	private function startGame(event:Event):void {
        		if (registrationWindow.gameType == "CHECKERS"){
        			//checkersGameWindow.currentPlayer = registrationWindow.currentPlayer;
        			//checkersGameWindow.gameId = registrationWindow.gameId;
        			//vstack.selectedChild = checkersGameWindow;	
        		}else if (registrationWindow.gameType == "PENTE"){
        			penteGameWindow.players = registrationWindow.players;
        			penteGameWindow.currentPlayer = registrationWindow.currentPlayer;
        			penteGameWindow.gameId = registrationWindow.gameId;
        			vstack.selectedChild = penteGameWindow;
        		}
        	}
        
        ]]>
    </mx:Script>
	
    <mx:ViewStack id="vstack" width="100%" height="100%" verticalCenter="0">
		<multigame:registrationWindow id="registrationWindow" complete="startGame(event)" />
		<!--checkers:checkersGameWindow id="checkersGameWindow"/-->
		<pente:penteGameWindow id="penteGameWindow"/>
	</mx:ViewStack>
</mx:Application>
