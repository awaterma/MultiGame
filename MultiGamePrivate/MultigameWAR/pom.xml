<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mx.ecosur</groupId>
  <artifactId>multi-game</artifactId>
  <packaging>war</packaging>
  <name>MultigameWAR</name>
  <description>WAR file for playing MultiGame</description>
  <parent>
        <artifactId>multi-game-private</artifactId>
        <groupId>mx.ecosur</groupId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>
   <dependencies>
    <dependency>
        <groupId>mx.ecosur</groupId>
        <artifactId>flex-ds</artifactId>
        <version>${version}</version>
    </dependency>   
    <dependency>
        <groupId>mx.ecosur</groupId>
        <artifactId>flex-client</artifactId>
        <version>${version}</version>
        <type>swf</type>
    </dependency>
   </dependencies>
  <build>
   <finalName>MultiGame</finalName>
   <plugins>
        <plugin>
            <groupId>org.sonatype.flexmojos</groupId>
            <artifactId>flexmojos-maven-plugin</artifactId>
            <version>3.2.0</version>
            <extensions>true</extensions>
            <configuration>
                <debug>true</debug>
            </configuration>
            <executions>
                <execution>
                    <goals><goal>copy-flex-resources</goal></goals>
                </execution>
            </executions>
        </plugin>
    </plugins>
  </build>
</project>
