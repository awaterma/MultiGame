<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>mx.ecosur</groupId>
  <artifactId>flex-client</artifactId>
  <packaging>swf</packaging>
  <name>Flex Client</name>
  <description>Flex UI implementation for our participatory modeling games.</description>
  <parent>
        <artifactId>multi-game-private</artifactId>
        <groupId>mx.ecosur</groupId>
        <version>1.1.0-SNAPSHOT</version>
    </parent>
    <properties>
        <flex-version>3.5.0.12683</flex-version>
    </properties>
  <dependencies>
    <dependency>
        <groupId>mx.ecosur</groupId>
        <artifactId>flex-ds</artifactId>
        <version>${version}</version>
    </dependency>
    <dependency>
        <groupId>com.adobe.flex.framework</groupId>
        <artifactId>framework</artifactId>
        <version>${flex-version}</version>
        <type>swc</type>
    </dependency>
  </dependencies>
  <build>
   <sourceDirectory>src/main/flex</sourceDirectory>
   <testSourceDirectory>src/test/flex</testSourceDirectory>
   <plugins>
    <plugin>
      <groupId>org.sonatype.flexmojos</groupId>
      <artifactId>flexmojos-maven-plugin</artifactId>
      <version>3.5.0</version>
      <extensions>true</extensions>
      <configuration>
          <sourceFile>main.mxml</sourceFile>
          <contextRoot>multi-game</contextRoot>
          <configurationReport>true</configurationReport>
      </configuration>
      <dependencies>
        <dependency>
          <groupId>com.adobe.flex</groupId>
          <artifactId>compiler</artifactId>
          <version>${flex-version}</version>
          <type>pom</type>
        </dependency>
        <dependency>
          <groupId>com.adobe.flex.compiler</groupId>
          <artifactId>asdoc</artifactId>
          <version>${flex-version}</version>
          <classifier>template</classifier>
          <type>zip</type>
        </dependency>
        <dependency>
          <groupId>com.adobe.flex</groupId>
          <artifactId>license</artifactId>
          <version>${flex-version}</version>
        </dependency>
      </dependencies>
      <executions>
        <execution>
            <goals><goal>optimize</goal></goals>
        </execution>
      </executions>
    </plugin>
    </plugins>
  </build>
</project>
